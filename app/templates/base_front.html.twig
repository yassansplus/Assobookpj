<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}AssoBook{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('global') }}
    {% endblock %}
</head>
<body>

{{ include('element/navbar.html.twig') }}

<div class="container">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="notice">
                <div style="width:50%;">
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}
</div>
    {% block body %}{% endblock %}


{% block javascripts %}
    {{ encore_entry_script_tags('script') }}
{% endblock %}

</body>
</html>
