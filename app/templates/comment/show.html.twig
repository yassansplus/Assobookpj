<!DOCTYPE html>

<title>Comment</title>

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Promote</th>
                <td>{{ comment.promote ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsAssoc</th>
                <td>{{ comment.isAssoc ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PublicationDate</th>
                <td>{{ comment.publicationDate ? comment.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">back to list</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
