{% extends 'base_front.html.twig' %}

{% block title %}Se connecter - AssoBook{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/formAuth.css') }}">{% endblock %}

{% block body %}
    <div class="box">
        <div id="cercle"><a href="{{ path('default_index') }}">X</a></div>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                Impossible de tomber ici, du fait d'avoir une redirection au sein du controller security:login
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1>Connexion</h1>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   placeholder="Email" required autofocus>
            <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe"
                   required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-primary" type="submit">Connexion</button>
            <div class="column_flex">
                <a class="forgetmdp" href="#">Mot de passe oubli√© ?</a>
                <p>Pas encore inscrit ? <a class="forgetmdp" href="{{ path('register') }}">Inscrivez-vous</a> maintenant ! </p>
            </div>
        </form>
    </div>
{% endblock %}
