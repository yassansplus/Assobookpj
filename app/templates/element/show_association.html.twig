<div class="info-other-association ml-md-4 mt-md-0 mt-4 px-3 py-4 shadow-sm bg-white">
    {% set allAssoc = allAssoc is defined ? allAssoc : '' %}
    {% set hasAssoc = allAssoc is not empty ? allAssoc : account.theme.associations %}
    <p class="text-sm-center">D'autres associations à découvrir </p>
    {% for assoc in hasAssoc|slice(0,5) %}
        <div class="row align-items-center mb-3">
            <div class="col-lg-2 col-md-12 text-lg-left text-md-center"><img src="{{ asset("assets/images/logo/insta.png") }}" alt="" width="40" height="40"></div>
            <div class="col-lg-7 col-md-12 text-lg-left text-md-center">
                <p class="m-0" style="font-size:13px;">{{ assoc.name }}</p>
                <p class="m-0" style="opacity: 0.4;font-size:12px"> {{ assoc.theme.name|capitalize }} - {{ assoc.adherents|length }} followers</p>
            </div>
            <div class="col-lg-3 col-md-12 text-center">
                <a href="{{ path('profile_show', {"id": assoc.id}) }}"><i class="design-logo fas fa-eye"></i></a>
            </div>
        </div>
    {% endfor %}
</div>